<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    tools:context=".CloudEducationHomeActivity"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="42dp"
        android:background="#D4D4D4"
        >
        <ImageButton
            android:id="@+id/back"
            android:layout_width="36dp"
            android:layout_height="27dp"
            android:src="@drawable/back_29"
            android:layout_marginTop="10dp"
            android:onClick="backEducationHome"/>
        <TextView android:layout_width="134dp"
            android:layout_height="27dp"
            android:layout_centerInParent="true"
            android:text="云教育平台首页"
            android:textColor="#000000"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginTop="10dp"/>

        <ImageButton
            android:layout_width="48dp"
            android:layout_height="27dp"
            android:src="@drawable/google_search_32px"
            android:layout_alignParentRight="true"
            android:layout_marginTop="10dp"/>
    </RelativeLayout>




    <TableLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:shrinkColumns="0,1,2"
        android:stretchColumns="0,1,2">
        <TableRow android:layout_width="fill_parent"
            android:layout_height="wrap_content">
            <Button android:gravity="center"
                android:padding="20dp"
                android:text="编程语言"
                android:onClick="#"/>
            <Button android:gravity="center"
                android:padding="20dp"
                android:text="移动开发"/>
            <Button android:gravity="center"
                android:padding="20dp"
                android:text="Web开发"/>
            <Button android:gravity="center"
                android:padding="20dp"
                android:text="操作系统"/>
        </TableRow>
        <TableRow android:layout_width="fill_parent"
            android:layout_height="wrap_content">
            <Button android:gravity="center"
                android:padding="20dp"
                android:text="数据库"/>
            <Button android:gravity="center"
                android:padding="20dp"
                android:text="产品运营"/>
            <Button android:gravity="center"
                android:padding="20dp"
                android:text="硬件开发"/>
            <Button android:gravity="center"
                android:padding="20dp"
                android:onClick="getInCurriculum"
                android:text="更多..."/>
        </TableRow>
    </TableLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:text="畅销好课"
        android:background="#D4D4D4"
        android:textSize="16sp"
        android:textStyle="bold"
        android:layout_marginTop="20dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView android:layout_width="fill_parent"
            android:layout_height="80dp"
            android:text="Android实例"
            android:gravity="center"
            android:background="#D6D7D7"
            android:layout_marginTop="10dp"/>
        <TextView android:layout_width="fill_parent"
            android:layout_height="80dp"
            android:text="C语言基础"
            android:gravity="center"
            android:background="#D6D7D7"
            android:layout_marginTop="20dp"/>
        <TextView android:layout_width="fill_parent"
            android:layout_height="80dp"
            android:text="Java入门到精通"
            android:gravity="center"
            android:background="#D6D7D7"
            android:layout_marginTop="20dp"/>
    </LinearLayout>



    <View android:layout_width="fill_parent"
        android:layout_height="2dp"
        android:background="#D4D4D4"
        android:layout_marginTop="10dp"/>

    <TableLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center">
        <TableRow android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <ImageButton
                android:id="@+id/home_page"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/home_37"
                android:onClick="checkInHome" />
            <ImageButton
                android:id="@+id/book"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/book_38"
                android:onClick="checkInCurriculum"
                android:layout_marginLeft="60dp"/>
            <ImageButton
                android:id="@+id/message"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/message_32px"
                android:layout_marginLeft="60dp"
                android:onClick="checkInMyMessage" />
        </TableRow>
        <TableRow android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/home"
                android:layout_marginLeft="5dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/course"
                android:layout_marginLeft="60dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="80dp"
                android:text="@string/my_message" />
        </TableRow>
    </TableLayout>

</LinearLayout>
