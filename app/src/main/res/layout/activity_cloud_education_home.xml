<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    tools:context=".CloudEducationHomeActivity"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">
        <include
            android:id="@+id/onlyHeaderId"
            layout="@layout/activity_only_title_header"/>
    </LinearLayout>




    <TableLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:shrinkColumns="0,1,2"
        android:stretchColumns="0,1,2">
        <TableRow android:layout_width="fill_parent"
            android:layout_height="wrap_content">
            <Button android:gravity="center"
                android:padding="20dp"
                android:text="编程语言"
                android:onClick="#"/>
            <Button android:gravity="center"
                android:padding="20dp"
                android:text="移动开发"/>
            <Button android:gravity="center"
                android:padding="20dp"
                android:text="Web开发"/>
            <Button android:gravity="center"
                android:padding="20dp"
                android:text="操作系统"/>
        </TableRow>
        <TableRow android:layout_width="fill_parent"
            android:layout_height="wrap_content">
            <Button android:gravity="center"
                android:padding="20dp"
                android:text="数据库"/>
            <Button android:gravity="center"
                android:padding="20dp"
                android:text="产品运营"/>
            <Button android:gravity="center"
                android:padding="20dp"
                android:text="硬件开发"/>
            <Button android:gravity="center"
                android:padding="20dp"
                android:onClick="getInCurriculum"
                android:text="更多..."/>
        </TableRow>
    </TableLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:text="畅销好课"
        android:background="@color/lightGray"
        android:textSize="16sp"
        android:textStyle="bold"
        android:layout_marginTop="20dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView android:layout_width="fill_parent"
            android:layout_height="80dp"
            android:text="Android实例"
            android:gravity="center"
            android:background="@color/lightGray"
            android:layout_marginTop="10dp"/>
        <TextView android:layout_width="fill_parent"
            android:layout_height="80dp"
            android:text="C语言基础"
            android:gravity="center"
            android:background="@color/lightGray"
            android:layout_marginTop="20dp"/>
        <TextView android:layout_width="fill_parent"
            android:layout_height="80dp"
            android:text="Java入门到精通"
            android:gravity="center"
            android:background="@color/lightGray"
            android:layout_marginTop="20dp"/>
    </LinearLayout>


    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">
        <include
            android:id="@+id/footerId"
            layout="@layout/activity_footer" />
    </LinearLayout>

</LinearLayout>
